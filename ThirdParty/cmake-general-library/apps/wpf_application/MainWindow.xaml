<Window x:Class="WpfSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSample"
        mc:Ignorable="d"
        Height="500"
        Width="500"
        Title="MainWindow">
    <Grid>
        <DockPanel LastChildFill="False" Background="Gray" x:Name="dockPanel" AllowDrop="True" Grid.ColumnSpan="2">

            <DockPanel VerticalAlignment="Center" DockPanel.Dock="Bottom">
                <Label Name="lbl" Content="" Background="LightGray" FontWeight="Bold" DockPanel.Dock="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" />
            </DockPanel>

            <DockPanel VerticalAlignment="Center" DockPanel.Dock="Top">

                <DockPanel>
                    <ToolBarTray DockPanel.Dock="Top"  Margin="0,0,0,0">
                        <ToolBar VerticalAlignment="Top">
                            <Button
                               Name="Do_Work"
                               ToolTip="do work"
                               Click="Do_Work_Click">
                                <StackPanel>
                                <TextBlock Margin="5,0,5,0">Do work</TextBlock>
                                </StackPanel>
                            </Button>
                            <Separator></Separator>
                        </ToolBar>
                    </ToolBarTray>
                </DockPanel>    
            </DockPanel>
        
        </DockPanel>
    </Grid>
</Window>
